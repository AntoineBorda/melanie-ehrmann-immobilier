<div
	class="p-2 lg:p-4">
	{# Image #}
	<twig:ux:icon
	name="{{ image }}" class="h-6 w-6 text-primary-700 mb-1.5 dark:text-primary-200 lg:h-8 lg:w-8"/>
	{# Title #}
	<h2 class="mb-1 text-lg font-medium text-primary-700 dark:text-primary-200 lg:text-xl">
		{{ title }}
	</h2>
	{# Description #}
	<p class="mb-1 text-sm text-default-900 dark:text-default-50">
		{{ description }}
	</p>
	{# CTA #}
	<a href="{{ url }}" class="inline-flex items-center text-sm font-semibold text-secondary-900 dark:text-secondary-400 hover:underline">
		En savoir plus
		<twig:ux:icon name="bi:arrow-right" class="w-5 h-5 ml-1"/>
	</a>
</div>
