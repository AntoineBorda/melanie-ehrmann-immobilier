<section
        class="border-t border-b py-4 border-default-300 bg-default-200 dark:bg-default-800 dark:border-default-700 lg:py-8">
    <div class="mx-auto max-w-screen-xl px-4">
        <div class="grid grid-cols-1 gap-6 text-center sm:grid-cols-2 sm:gap-16 lg:grid-cols-3">
            <div>
                <div
                        class="mx-auto inline-flex h-16 w-16 items-center justify-center rounded-lg text-default-500 bg-default-100 dark:bg-default-800 dark:text-default-50">
                    <svg aria-hidden="true" class="h-10 w-10" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"
                         fill="currentColor">
                        <path fill-rule="evenodd"
                              d="M4 4a2 2 0 012-2h8a2 2 0 012 2v12a1 1 0 110 2h-3a1 1 0 01-1-1v-2a1 1 0 00-1-1H9a1 1 0 00-1 1v2a1 1 0 01-1 1H4a1 1 0 110-2V4zm3 1h2v2H7V5zm2 4H7v2h2V9zm2-4h2v2h-2V5zm2 4h-2v2h2V9z"
                              clip-rule="evenodd"/>
                    </svg>
                </div>
                <div class="mt-4">
                    <h3 class="text-xl font-bold text-default-900 dark:text-default-50">
                        Company information:
                    </h3>
                    <p class="mt-1 text-base font-normal text-default-500 dark:text-default-400">
                        Flowbite LLC<br>Tax id: USXXXXXX
                    </p>
                </div>
            </div>

            <div>
                <div
                        class="mx-auto inline-flex h-16 w-16 items-center justify-center rounded-lg text-default-500 bg-default-100 dark:bg-default-800 dark:text-default-50">
                    <svg aria-hidden="true" class="h-10 w-10" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"
                         fill="currentColor">
                        <path fill-rule="evenodd"
                              d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z"
                              clip-rule="evenodd"/>
                    </svg>
                </div>
                <div class="mt-4">
                    <h3 class="text-xl font-bold text-default-900 dark:text-default-50">
                        Address:
                    </h3>
                    <p class="mt-1 text-base font-normal text-default-500 dark:text-default-400">
                        SILVER LAKE, United States<br>1941 Late Avenue<br>Zip Code/Postal code: 03875
                    </p>
                </div>
            </div>

            <div class="hidden lg:block">
                <div
                        class="mx-auto inline-flex h-16 w-16 items-center justify-center rounded-lg text-default-500 bg-default-100 dark:bg-default-800 dark:text-default-50">
                    <svg aria-hidden="true" class="h-10 w-10" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"
                         fill="currentColor">
                        <path
                                d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
                    </svg>
                </div>
                <div class="mt-4">
                    <h3 class="text-xl font-bold text-default-900 dark:text-default-50">
                        Contact us:
                    </h3>
                    <p class="mt-1 text-base font-normal text-default-500 dark:text-default-400">
                        Email us for general queries, including marketing and partnership opportunities.
                    </p>
                    <a href="#" title=""
                       class="mt-1 block text-base font-semibold text-default-900 hover:underline dark:text-default-50">
                        hello@company.com
                    </a>
                </div>
            </div>
        </div>

        <div class="mx-auto mt-12 max-w-3xl lg:mt-24">
            <form action="#" class="mx-auto grid max-w-screen-md grid-cols-1 gap-x-8 gap-y-6 sm:grid-cols-2">
                <div>
                    <label for="first-name"
                           class="mb-2 block text-sm font-medium text-default-900 dark:text-default-50">
                        First name
                    </label>
                    <input type="text" id="first-name"
                           class="block w-full rounded-lg border p-3 text-sm text-default-900 border-default-300 bg-default-50 focus:ring-primary-500 focus:border-primary-500 dark:bg-default-700 dark:border-default-600 dark:placeholder-default-400 dark:text-default-50 dark:focus:ring-primary-500 dark:focus:border-primary-500"
                           placeholder="Bonnie" required>
                </div>

                <div>
                    <label for="last-name" class="mb-2 block text-sm font-medium text-default-900 dark:text-default-50">
                        Last name
                    </label>
                    <input type="text" id="last-name"
                           class="block w-full rounded-lg border p-3 text-sm text-default-900 border-default-300 bg-default-50 focus:ring-primary-500 focus:border-primary-500 dark:bg-default-700 dark:border-default-600 dark:placeholder-default-400 dark:text-default-50 dark:focus:ring-primary-500 dark:focus:border-primary-500"
                           placeholder="Green" required>
                </div>

                <div>
                    <label for="email" class="mb-2 block text-sm font-medium text-default-900 dark:text-default-50">
                        Your email
                    </label>
                    <input type="email" id="email"
                           class="block w-full rounded-lg border text-sm shadow-sm bg-default-50 border-default-300 text-default-900 p-2.5 focus:ring-primary-500 focus:border-primary-500 dark:bg-default-700 dark:border-default-600 dark:placeholder-default-400 dark:text-default-50 dark:focus:ring-primary-500 dark:focus:border-primary-500"
                           placeholder="name@flowbite.com" required>
                </div>

                <div>
                    <label for="phone-number"
                           class="mb-2 block text-sm font-medium text-default-900 dark:text-default-50">
                        Phone number
                    </label>
                    <input type="number" id="phone-number"
                           class="block w-full rounded-lg border p-3 text-sm text-default-900 border-default-300 bg-default-50 focus:ring-primary-500 focus:border-primary-500 dark:bg-default-700 dark:border-default-600 dark:placeholder-default-400 dark:text-default-50 dark:focus:ring-primary-500 dark:focus:border-primary-500"
                           placeholder="+(12) 345 6789" required>
                </div>

                <div class="sm:col-span-2">
                    <label for="message" class="mb-2 block text-sm font-medium text-default-900 dark:text-default-50">
                        Your message
                    </label>
                    <textarea id="message" rows="6"
                              class="block w-full rounded-lg border text-sm shadow-sm p-2.5 text-default-900 bg-default-50 border-default-300 focus:ring-primary-500 focus:border-primary-500 dark:bg-default-700 dark:border-default-600 dark:placeholder-default-400 dark:text-default-50 dark:focus:ring-primary-500 dark:focus:border-primary-500"
                              placeholder=""></textarea>
                </div>

                <div class="sm:col-span-2">
                    <div class="flex md:items-center">
                        <input type="checkbox" id="terms" value=""
                               class="h-4 w-4 rounded bg-default-50 border-default-300 text-primary-600 -500 -600 focus:ring-ay-100 focus:ring-2 dark:ring-offset-default-800 dark:bg-default-700 dark:border-default-600 dark:focus:ring-ay-100 dark:focus:ring-offset-default-800">
                        <label for="terms" class="ml-2 text-sm font-normal text-default-500 dark:text-default-400">
                            By submitting this form, you confirm that you have read and agree to
                            <a href="#" title=""
                               class="font-medium underline text-default-900 hover:no-underline dark:text-default-50">
                                Terms of Service
                            </a>
                            and
                            <a href="#" title=""
                               class="font-medium underline text-default-900 hover:no-underline dark:text-default-50">
                                Privacy Statement
                            </a>
                        </label>
                    </div>
                </div>

                <button type="submit"
                        class="rounded-lg px-5 py-3 text-center text-sm font-medium text-default-50 bg-primary-700 hover:bg-primary-800 focus:ring-primary-300 focus:outline-none focus:ring-4 dark:bg-primary-600 sm:w-fit dark:hover:bg-primary-700 dark:focus:ring-primary-800">
                    Send
                    message
                </button>
            </form>
        </div>
    </div>
</section>
